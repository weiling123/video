<view class='boxs'>
  <view class="swiper-tab">
    <view class="swiper-tab-item {{currentTab==0? 'no' : ''}}" data-current='0' bindtap='clickTab'>精选</view>
    <view class="swiper-tab-item {{currentTab==1? 'no' : ''}}" data-current='1' bindtap='clickTab'>日榜</view>
  </view>
  <swiper current="{{currentTab}}" duration="300" bindchange="swiperTab">


    <!-- 精选，日榜 -->
    <!-- 精选 -->
    <swiper-item>
      <!-- 精选 -->
      <scroll-view scroll-y style="height: 100vh;" bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
        <view class='video'>
          <block wx:for="{{videoList}}">
            <view class='video-item'>
              <view class='wrapper'>
                <video class='video-video' wx:if='{{index==videoIndex}}' id='video{{index}}' autoplay='{{true}}' show-center-play-btn="{{false}}" src='{{item.videoUrl}}' initial-time='{{12}}'></video>
                <image class='video-video2' wx:if='{{index!=videoIndex}}' mode='aspectFill' src='{{item.coverimg}}'></image>
                <image class='videoPlay' wx:if='{{index!=videoIndex}}' data-index='{{index}}' bindtap='videoPlay' src='/images/play.png'></image>
              </view>
              <view class='video-share'>
                <view class='video_view_font' bindtap='onCommentClick'>
                  <button class='video_view_font'>
                    <image class='video-image-share' src='/images/comment.png'></image>
                    <text class='video-font'>99</text>
                  </button>
                </view>
                <view class='video_view_font' bindtap='onGiveClick'>
                  <button class='video_view_font'>
                    <image class='video-image-share' src='/images/give_s.png'></image>
                    <text class='video-font'>99</text>
                  </button>
                </view>
                <view class='video_view_font'>
                  <button class='video_view_font' open-type='share'>
                    <image class='video-image-share' src='/images/share.png'></image>
                    <text class='video-font'>分享</text>
                  </button>
                </view>
              </view>
              <view class='video-name'>{{item.videoTitle}}</view>
              <view class='video-desc' style="{{item.upStatus?'':'display:-webkit-box'}}">{{item.description}}</view>
              <view class='video-bottom'>

                <view class='video-btn' data-index="{{index}}" bindtap='upDown'>
                  <image hidden='{{item.upStatus}}' src='/images/slide.png'></image>
                  <image hidden='{{!item.upStatus}}' src='/images/up.png'></image>
                  <text>{{!item.upStatus?'展开':'收起'}}</text>
                </view>

              </view>
            </view>
          </block>
        </view>
      </scroll-view>
    </swiper-item>

    <!-- 日榜 -->
    <swiper-item>
      <!-- 日榜 -->
      <scroll-view scroll-y style="height: 100vh;" bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
        <view class='video'>
          <block wx:for="{{videoList}}">
            <view class='video-item'>
              <view class='wrapper'>
                <video class='video-video' wx:if='{{index==videoIndex}}' id='video{{index}}' autoplay='{{true}}' show-center-play-btn="{{false}}" src='{{item.videoUrl}}' initial-time='{{12}}'></video>
                <image class='video-video2' wx:if='{{index!=videoIndex}}' mode='aspectFill' src='{{item.coverimg}}'></image>
                <image class='videoPlay' wx:if='{{index!=videoIndex}}' data-index='{{index}}' bindtap='videoPlay' src='/images/play.png'></image>
              </view>
              <view class='video-share'>
                <view class='video_view_font' bindtap='onCommentClick'>
                  <button class='video_view_font'>
                    <image class='video-image-share' src='/images/comment.png'></image>
                    <text class='video-font'>评论</text>
                  </button>
                </view>
                <view class='video_view_font' bindtap='onGiveClick'>
                  <button class='video_view_font'>
                    <image class='video-image-share' src='/images/give_s.png'></image>
                    <text class='video-font'>{{give_sum}}</text>
                  </button>
                </view>
                <view class='video_view_font'>
                  <button class='video_view_font' open-type='share'>
                    <image class='video-image-share' src='/images/share.png'></image>
                    <text class='video-font'>分享</text>
                  </button>
                </view>
              </view>
              <view class='video-name'>{{item.videoTitle}}</view>
              <view class='video-desc' style="{{item.upStatus?'':'display:-webkit-box'}}">{{item.description}}</view>
              <view class='video-bottom'>

                <view class='video-btn' data-index="{{index}}" bindtap='upDown'>
                  <image hidden='{{item.upStatus}}' src='/images/slide.png'></image>
                  <image hidden='{{!item.upStatus}}' src='/images/up.png'></image>
                  <text>{{!item.upStatus?'展开':'收起'}}</text>
                </view>

              </view>
            </view>
          </block>
        </view>
      </scroll-view>
    </swiper-item>
  </swiper>
</view>